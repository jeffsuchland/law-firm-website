---
import Layout from '../layouts/Layout.astro';

const practiceAreas = [
  {
    title: 'Personal Injury',
    description: 'We help victims of accidents get the compensation they deserve. Our experienced attorneys handle car accidents, slip and falls, workplace injuries, and more.',
    icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
    examples: ['Car Accidents', 'Slip and Fall', 'Workplace Injuries', 'Medical Malpractice', 'Product Liability']
  },
  {
    title: 'Family Law',
    description: 'Our compassionate attorneys guide you through sensitive family matters with discretion and care, protecting your interests and those of your loved ones.',
    icon: 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z',
    examples: ['Divorce', 'Child Custody', 'Spousal Support', 'Adoption', 'Prenuptial Agreements']
  },
  {
    title: 'Estate Planning',
    description: 'Secure your family\'s future with comprehensive estate planning services. We help you protect your assets and ensure your wishes are carried out.',
    icon: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
    examples: ['Wills', 'Trusts', 'Power of Attorney', 'Healthcare Directives', 'Estate Administration']
  },
  {
    title: 'Business Law',
    description: 'From startups to established corporations, we provide comprehensive legal services to protect your business interests and facilitate growth.',
    icon: 'M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
    examples: ['Business Formation', 'Contracts', 'Employment Law', 'Mergers & Acquisitions', 'Intellectual Property']
  }
];
---

<Layout 
  title="Practice Areas - Justice & Associates"
  description="Explore our comprehensive legal services across personal injury, family law, estate planning, and business law."
>
  <div class="bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-4 sm:px-6 py-16">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h1 class="text-4xl font-bold text-gray-900 mb-6">Our Practice Areas</h1>
        <p class="text-xl text-gray-600">
          At Justice & Associates, we offer comprehensive legal services across multiple practice areas. 
          Our experienced attorneys are dedicated to providing exceptional representation.
        </p>
      </div>

      <div class="grid gap-12 max-w-7xl mx-auto">
        {practiceAreas.map((area) => (
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow duration-300">
            <div class="p-8 sm:p-10">
              <div class="flex items-start">
                <div class="flex-shrink-0 bg-blue-50 rounded-lg p-3">
                  <svg 
                    class="h-8 w-8 text-blue-600" 
                    xmlns="http://www.w3.org/2000/svg" 
                    fill="none" 
                    viewBox="0 0 24 24" 
                    stroke="currentColor"
                  >
                    <path 
                      stroke-linecap="round" 
                      stroke-linejoin="round" 
                      stroke-width="2" 
                      d={area.icon}
                    />
                  </svg>
                </div>
                <div class="ml-6 flex-1">
                  <h2 class="text-2xl font-semibold text-gray-900 mb-3">{area.title}</h2>
                  <p class="text-gray-600 leading-relaxed mb-6">{area.description}</p>
                  
                  <div class="border-t border-gray-100 pt-6">
                    <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">Areas of Focus</h3>
                    <div class="flex flex-wrap gap-2">
                      {area.examples.map((example) => (
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-gray-50 text-gray-600">
                          {example}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="mt-16 bg-blue-600 rounded-2xl p-8 sm:p-10 max-w-3xl mx-auto text-center">
        <h2 class="text-2xl font-semibold text-white mb-4">Need Legal Assistance?</h2>
        <p class="text-blue-100 mb-8">
          Our experienced attorneys are here to help you navigate your legal challenges. 
          Contact us today for a consultation.
        </p>
        <a 
          href="/contact" 
          class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-lg text-blue-600 bg-white hover:bg-blue-50 transition-colors duration-150"
        >
          Schedule a Consultation
          <svg class="ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</Layout>
