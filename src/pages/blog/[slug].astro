---
import Layout from '../../layouts/Layout.astro';
import { getBlogPost, getBlogPosts } from '../../lib/contentful';
import '../../styles/blog.css';
import { documentToHtmlString } from '@contentful/rich-text-html-renderer';

// This generates the static paths for all blog posts
export async function getStaticPaths() {
  const posts = await getBlogPosts();
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const content = post.content ? documentToHtmlString(post.content) : '';
---

<style>
  /* Target paragraphs in blog content */
  .blog-content p {
    margin-bottom: 2em !important;
  }
  /* Ensure empty paragraphs maintain spacing */
  .blog-content p:empty {
    display: block !important;
    height: 2em !important;
  }
</style>

<Layout 
  title={`${post.title} - Justice & Associates`} 
  description={post.excerpt}
>
  <article class="container mx-auto px-6 py-12">
    {post.featuredImage?.fields?.file?.url && (
      <img 
        src={`https:${post.featuredImage.fields.file.url}?w=1200&h=600&fit=fill`}
        alt={post.title}
        class="w-full h-[400px] object-cover rounded-lg mb-8"
      />
    )}
    
    <div class="max-w-3xl mx-auto">
      <h1 class="text-4xl font-bold mb-6">{post.title}</h1>
      
      {post.author?.fields && (
        <div class="flex items-center mb-8">
          {post.author.fields.image?.fields?.file?.url && (
            <img 
              src={`https:${post.author.fields.image.fields.file.url}?w=60&h=60&fit=fill`}
              alt={post.author.fields.name}
              class="w-14 h-14 rounded-full mr-4"
            />
          )}
          <div>
            <p class="font-semibold">{post.author.fields.name}</p>
            {post.author.fields.title && (
              <p class="text-gray-600">{post.author.fields.title}</p>
            )}
            {post.publishDate && (
              <p class="text-sm text-gray-500">
                {new Date(post.publishDate).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </p>
            )}
          </div>
        </div>
      )}
      
      <div class="prose prose-lg max-w-none" set:html={content} />
    </div>
  </article>
</Layout>
